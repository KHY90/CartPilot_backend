# ==================== LLM 설정 ====================
# 사용할 LLM 제공자 선택: openai 또는 gemini
LLM_PROVIDER=openai

# OpenAI API Key
OPENAI_API_KEY=sk-...your-key-here

# Google Gemini API Key
GOOGLE_API_KEY=AIza...your-key-here

# ==================== 네이버 쇼핑 API ====================
NAVER_CLIENT_ID=your-client-id
NAVER_CLIENT_SECRET=your-client-secret

# ==================== 서버 설정 ====================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
CORS_ORIGINS=http://localhost:3000

# ==================== 세션/캐시 설정 ====================
SESSION_TTL_MINUTES=60
CACHE_TTL_SECONDS=3600

# ==================== PostgreSQL 데이터베이스 ====================
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=

# ==================== Redis ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ==================== JWT 인증 ====================
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ==================== OAuth 소셜 로그인 ====================
# 카카오 (https://developers.kakao.com)
KAKAO_CLIENT_ID=your-kakao-rest-api-key
KAKAO_CLIENT_SECRET=  # 선택사항
KAKAO_REDIRECT_URI=http://localhost:8000/api/auth/kakao/callback

# 네이버 (https://developers.naver.com)
NAVER_OAUTH_CLIENT_ID=your-naver-client-id
NAVER_OAUTH_CLIENT_SECRET=your-naver-client-secret
NAVER_OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/naver/callback

# ==================== 알림 설정 ====================
# 카카오톡 "나에게 보내기" - 별도 설정 불필요 (사용자 로그인 시 자동 활성화)

# 이메일 SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@cartpilot.com
